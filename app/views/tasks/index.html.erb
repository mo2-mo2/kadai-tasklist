<% if logged_in? %>
    
    <h1>タスク一覧</h1>
    
    <ul>
        <% @tasks.each do |task| %>
            <li><%= link_to task.id, task %> : <%= task.content %> &gt; <%= task.status %></li>
        <% end %>
    </ul>
    
    <%= link_to "新規タスクの追加", new_task_path %>

<% else %>
    <div class="center jumbotron">
        <div class="text-center">
          <h1>Welcome to the Tasklist</h1>
          <%= link_to 'Sign up now!', "user#new", class: 'btn btn-lg btn-primary' %>
        </div>
    </div>
<% end %>